{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "types": ["chrome"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".wxt/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
