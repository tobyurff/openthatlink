# =============================================================================
# OpenThat.Link Environment Variables
# =============================================================================
# All variables are optional - sensible defaults are provided.
# NEXT_PUBLIC_ prefixed variables are exposed to the browser.
# =============================================================================

# -----------------------------------------------------------------------------
# App Branding (for white-labeling / self-hosting)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_APP_NAME=OpenThat.Link
# NEXT_PUBLIC_BASE_URL=  # Auto-detected from Vercel URL if not set

# -----------------------------------------------------------------------------
# Extension & External Links (for white-labeling / self-hosting)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_CHROME_EXTENSION_URL=https://chromewebstore.google.com/detail/enfmlabiopdgghghdlkckfeobnfeafio
# NEXT_PUBLIC_FIREFOX_EXTENSION_URL=https://addons.mozilla.org/en-US/firefox/addon/openthat-link/
# NEXT_PUBLIC_GITHUB_URL=https://github.com/tobyurff/openthatlink

# -----------------------------------------------------------------------------
# Company Info - Footer (for white-labeling / self-hosting)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_COMPANY_NAME=Unstuckable OÃœ
# NEXT_PUBLIC_COMPANY_ADDRESS=Sepapaja 6, Tallinn 15551, Estonia
# NEXT_PUBLIC_CONTACT_EMAIL_USER=toby-socilo
# NEXT_PUBLIC_CONTACT_EMAIL_DOMAIN=unstuckable
# NEXT_PUBLIC_CONTACT_EMAIL_TLD=eu

# -----------------------------------------------------------------------------
# Secret Format (change only if you know what you're doing)
# -----------------------------------------------------------------------------
RECOGNIZABLE_TOKEN=OTL
SECRET_TOTAL_LEN=16
SECRET_INSERT_POS=8
NANOID_ALPHABET=23456789ABCDEFGHJKLMNPQRSTUVWXYZ

# -----------------------------------------------------------------------------
# Queue Settings
# -----------------------------------------------------------------------------
QUEUE_KEY_PREFIX=otl:q:
MAX_QUEUE_SIZE=100
MAX_DELIVER_PER_POLL=10
QUEUE_ITEM_TTL_SECONDS=259200

# -----------------------------------------------------------------------------
# Extension Polling
# -----------------------------------------------------------------------------
POLL_INTERVAL_SECONDS=30

# -----------------------------------------------------------------------------
# Redis - Local Development (ioredis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Redis - Production (Upstash, typically provided by Vercel integration)
# -----------------------------------------------------------------------------
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Alternative Redis keys (Vercel KV uses these)
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
